@using SevenTiny.Cloud.MultiTenant.Domain.Entity;

@{
    ViewData["Title"] = "List";
    Layout = $"~/Views/Shared/_LayoutHeaderStyle.cshtml";
    List<ListView> entities = Model as List<ListView> ?? new List<ListView>();
}

<article class="cl pd-20">
    <div class="cl pd-5 bg-1 bk-gray">
        <span class="l">
            <a class="btn btn-primary radius" href="/ListView/Add"><i class="Hui-iconfont">&#xe600;</i> 新增对象列表</a>
        </span>
        <span class="r">共有数据：<strong>@entities?.Count</strong> 条</span>
    </div>
    <div class="mt-20">
        <table class="table table-border table-bordered table-bg table-hover table-sort table-responsive">
            <thead>
                <tr class="text-c">
                    <th>名称</th>
                    <th>编码</th>
                    <th>描述</th>
                    <th>排序</th>
                    <th>分组</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in entities)
                {
                    <tr class="text-c">
                        <td><a class="ml-5" href="/ListView/AggregateField/@item.Id" title="组织字段" style="font-weight:bold;color:dodgerblue" data-toggle="tooltip" data-placement="top">@item.Name</a></td>
                        <td>@item.Code</td>
                        <td>@item.Description</td>
                        <td>@item.SortNumber</td>
                        <td>@item.Group</td>
                        <td class="f-14 td-manage">
                            <a style="text-decoration: none" class="ml-5" href="/ListView/AggregateField/@item.Id" title="组织字段" data-toggle="tooltip" data-placement="top"><i class="Hui-iconfont">&#xe6c0;</i></a>
                            <a style="text-decoration: none" class="ml-5" href="/ListView/Update/@item.Id" title="编辑" data-toggle="tooltip" data-placement="top"><i class="Hui-iconfont">&#xe6df;</i></a>
                            <a style="text-decoration: none" class="ml-5" onClick="ajax_operate_table_confirm(this,'/ListView/LogicDelete/@item.Id','确认要删除吗？（不可恢复）')" href="javascript:;" title="永久删除" data-toggle="tooltip" data-placement="top"><i class="Hui-iconfont">&#xe6e2;</i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</article>

@await Html.PartialAsync($"~/Views/Shared/_FooterScripts.cshtml")
@await Html.PartialAsync("~/Views/Shared/_CommonScript.cshtml")
<!--请在下方写此页面业务相关的脚本-->
<script type="text/javascript" src="~/lib/datatables/1.10.0/jquery.dataTables.min.js"></script>
<script type="text/javascript">
    $('.table-sort').dataTable({
        "aLengthMenu": [[50, 100, -1], ["50", "100", "All"]],//二组数组，第一组数量，
        "aaSorting": [[3, "asc"], [4, "asc"]],//默认第几个排序
        "bStateSave": true,//状态保存
        "aoColumnDefs": [
            //{"bVisible": false, "aTargets": [ 3 ]} //控制列的隐藏显示
            { "orderable": false, "aTargets": [2, 5] }// 不参与排序的列
        ]
    });
</script>
